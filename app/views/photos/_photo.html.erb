<div class="img-box">
  <a href='<%= photo_path(photo) %>'>
    <div class="img">
      <%= image_tag(photo.photo_url(:thumb).to_s) %>
    </div>
  </a>
  <div class="info">
    <% if !photo.name.blank? %>
      <span class="desc"><%= photo.name %></span>
    <% else %>
      <span>&nbsp;</span>
    <% end %>
    <%= render "counts", photo: photo %>
  </div>
</div>